<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ActionBar style -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/blueDark</item>
    </style>

    <!-- Button style -->
    <style name="BtnStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textAppearance">@style/BtnTextStyle</item>
    </style>

    <!-- Button text style -->
    <style name="BtnTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditText style-->
    <style name="EditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:ems">15</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ListView style -->
    <style name="ListViewStyle" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/group_list_selector</item>
    </style>

</resources>
